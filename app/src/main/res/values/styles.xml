<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Style untuk TextInput -->
    <style name="text_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color3</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/color2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteButtonText">
        <item name="android:textColor">@color/color3</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomDatePickerStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/color1</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:divider">@color/color1</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- CHIP MOOD NOTES STYLE -->
    <style name="ChipFlow" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_flow_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconSize">30dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:layout_marginBottom">1dp</item>

    </style>

    <style name="ChipMood" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/color_mood</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipIconSize">30dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>
