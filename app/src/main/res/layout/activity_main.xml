<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Button to edit period calendar -->
    <Button
        android:id="@+id/editPeriodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Period Calendar"
        android:layout_marginBottom="16dp" />

    <!-- Button to navigate to cycle history -->
    <Button
        android:id="@+id/cyclePageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle History" />

    <Button
        android:id="@+id/moodNotesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood Notes" />

</LinearLayout>
