<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical">
                <!-- Welcome Text and Name -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_bold"
                    android:text="Welcome,"
                    android:textColor="@color/color5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_bold"
                    android:text="Alexandra San"
                    android:textColor="@color/color4"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Heart Layout with Period Text and Edit Icon -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center">

                <!-- Heart Shape (GIF) -->
                <ImageView
                    android:id="@+id/imgHeart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/heartgif" />

                <LinearLayout
                    android:id="@+id/tvPeriodStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <!-- Period Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/worksans_semi"
                        android:gravity="center"
                        android:text="Period"
                        android:textColor="@color/color4"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/worksans_bold"
                        android:gravity="center"
                        android:text="Not Started"
                        android:textColor="@color/color4"
                        android:textSize="22sp" />

                </LinearLayout>

                <!-- Small Edit Icon -->
                <ImageView
                    android:id="@+id/editDatePeriodIcon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/veluna_editprofile" />
            </FrameLayout>


            <!-- Small Card with Month and Year -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_color1"
                android:elevation="4dp"
                android:padding="5dp">

                <!-- Horizontal Layout for Calendar Icon and Month-Year Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Calendar Emoji Icon -->
                    <ImageView
                        android:id="@+id/imgCalendarIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/calendericon" />

                    <!-- Month-Year Text -->
                    <TextView
                        android:id="@+id/tvMonthYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_semi"
                        android:text="March 2024"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Date Circles with Days -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:stretchColumns="0,1,2,3,4,5,6">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <!-- Example of One Date Circle Period Before -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Date Circle -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_period_bef"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />

                        <!-- Day Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Date Circle -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_period_bef"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="21"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />

                        <!-- Day Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="M"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/periodBef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Date Circle -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_period_bef"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="22"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />

                        <!-- Day Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="T"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Example of One Date Circle Period Now -->
                        <LinearLayout
                            android:id="@+id/periodNowContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!-- FrameLayout for Date Circle and Edit Icon -->
                            <FrameLayout
                                android:id="@+id/periodNow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <!-- Date Circle -->
                                <TextView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/circle_period_now"
                                    android:fontFamily="@font/worksans_bold"
                                    android:gravity="center"
                                    android:text="23"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <!-- Edit Icon on top-right corner -->
                                <ImageView
                                    android:id="@+id/moodEditIcon"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="end|top"
                                    android:src="@drawable/veluna_add_perioddate" />
                            </FrameLayout>

                            <!-- Day Text positioned below the circle -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/worksans_bold"
                                android:gravity="center"
                                android:text="W"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                    <!-- Example of One Date Circle Period Not -->
                    <LinearLayout
                        android:id="@+id/periodNot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Date Circle -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_period_not"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="24"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />

                        <!-- Day Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="T"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Date Circle -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_period_not"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="25"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />

                        <!-- Day Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="F"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Date Circle -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_period_not"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="26"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />

                        <!-- Day Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/worksans_bold"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_main"
            android:padding="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/color4"
                android:text="Alexandria's Cycle"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"/>

            <!-- START PREVIOUS PERIOD SHOWCASE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- PREVIOUS CYCLE LENGTH -->
                <RelativeLayout
                    android:id="@+id/previousCycleLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous Cycle Length"
                            android:textStyle="bold|italic"
                            android:textColor="@color/color2"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28 Days"
                            android:textStyle="bold"
                            android:textColor="@color/color4"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/period_abnormal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Abnormal"
                            android:textStyle="bold"
                            android:textColor="@color/color4" />

                    </LinearLayout>

            </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/dashed_line"
                    android:layout_marginBottom="10dp"/>

                <!-- PREVIOUS PERIOD LENGTH -->
                <RelativeLayout
                    android:id="@+id/previousPeriodLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="80dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous Period Length"
                            android:textStyle="bold|italic"
                            android:textColor="@color/color2"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6 Days"
                            android:textStyle="bold"
                            android:textColor="@color/color4"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/period_normal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Normal"
                            android:textStyle="bold"
                            android:textColor="@color/color4"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/dashed_line"
                    android:layout_marginBottom="10dp"/>

                <!-- CYCLE LENGTH VARIATION -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="4dp">

                    <LinearLayout
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="80dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cycle Length Variation"
                            android:textStyle="bold|italic"
                            android:textColor="@color/color2"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="28 -32 Days"
                            android:textStyle="bold"
                            android:textColor="@color/color4"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/period_normal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Normal"
                            android:textStyle="bold"
                            android:textColor="@color/color4"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
            <!-- END PREVIOUS PERIOD SHOWCASE -->

            <!-- START CYCLE HISTORY SHOWCASE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:padding="20dp"
                android:paddingHorizontal="30dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cycle History"
                    android:textStyle="bold|italic"
                    android:textSize="18dp"
                    android:textColor="@color/color4"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/dashed_line"
                    android:layout_marginBottom="10dp"/>

                <!-- PREVIOUS CYCLE LENGTH -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="80dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Cycle: 29 Days"
                            android:textStyle="italic"
                            android:textColor="@color/color4"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Started May 22"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/history_cycle_button"
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/history_button_main"
                        android:layout_marginLeft="70dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/dashed_line"
                    android:layout_marginBottom="10dp"/>

                <!-- PREVIOUS PERIOD LENGTH -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="80dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Period Length: 5 Days"
                            android:textStyle="italic"
                            android:textColor="@color/color4"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Started May 22"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:paddingBottom="8dp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/history_cycle_button2"
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/history_button_main"
                        android:layout_marginLeft="45dp"/>

                </LinearLayout>

            </LinearLayout>
            <!-- END CYCLE HISTORY SHOWCASE -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/color4"
                android:layout_marginBottom="10dp"
                android:text="Alexandra's Insight"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/insight_1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/color4"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:text="How does sperm goes into the cell ?"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/insight_2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/color4"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="How does sperm goes into the cell ?"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/insight_3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/color4"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="How does sperm goes into the cell ?"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</ScrollView>