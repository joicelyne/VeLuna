<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="oval">

<!-- Background color circle -->
<solid android:color="@color/color1" />

<!-- Solid Border (Stroke) -->
<stroke
    android:width="10dp"
    android:color="@color/color4" />

<!-- Padding within circle -->
<padding
    android:left="10dp"
    android:top="10dp"
    android:right="10dp"
    android:bottom="10dp" />
</shape>

